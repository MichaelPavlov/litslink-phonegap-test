<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.coolappz.HTML5Application" version="1.0.0">
    <name>My Children</name>
    <description>
        My Children. Litslink test task application.
    </description>
    <author email="mihpavlov@gmail.com" href="emailto:mihpavlov@gmail.com?Subject=We%20so%20your%20phonegap%20app">
        Michael Pavlov
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
	<feature name="DatePicker">
		<param name="ios-package" value="DatePicker"/>
	</feature>
	<feature name="DatePickerPlugin">
		<param name="android-package" value="com.sharinglabs.cordova.plugin.datepicker.DatePickerPlugin"/>
	</feature>
	<gap:plugin name="com.sharinglabs.cordova.plugin.datepicker" />
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>
